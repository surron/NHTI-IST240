@{
	var total = 0;
	var results = "";
	if(IsPost){
		var numOne = Request["value1"];
		var numTwo = Request["value1"];
		var modOne = Request["add"];
		var modTwo = Request["subtract"];
		var modThree = Request["multiply"];
		var modFour = Request["divide"];
		
		var numberOne = Convert.ToInt32(numOne);
		var numberTwo = Convert.ToInt32(numTwo);
		
		if(modOne == true){
			total = numberOne + numberTwo;
		}
		else if(modTwo == true){
			total = numberOne - numberTwo;
		}
		else if(modThree == true){
			total = numberOne * numberTwo;
		}
		else if(modFour == true){
			total = numberOne / numberTwo;
		}
		results = total;
	}
}
<!DOCTYPE html>
  <head>
    <title>Basic Calculator</title>
  </head>
  
  <body>
    <header class='form-header'>
      <h1>Calculator</h1>
    </header>
	<form action='' method='post' class='calc-form'>
	<div class='form-row'>
	  <label for='value1'>Value 1</label>
	  <input id='value1' name='value1'type='text'/>
	  <label for='value2'>Value 2</label>
	  <input id='value2' name='value2' type='text'/>
	  <label for='results'>=</label>
	  <p>@results</p>
	</div>
		
		<fieldset class='modifier'>
		  <legend>modifier</legend>
		  <input id='add'
				 type='radio'
				 name='add'
				 value='add' />
		  <label for='add' class='radio-label'>Add (+)</label>
		  <input id='subtract'
				 type='radio'
				 name='subtract'
				 value='subtract' />
		  <label for='subtract' class='radio-label'>Subtract(-)</label>
		  <input id='multiply'
				 type='radio'
				 name='multiply'
				 value='multiply' />
		  <label for='multiply' class='radio-label'>Multiply (*)</label>
		  <input id='divide'
				 type='radio'
				 name='divide'
				 value='divide' />
		  <label for='divide' class='radio-label'>Divide (/)</label>
		</fieldset>
		
		<div class='form-row'>
			<button>Submit</button>
		</div>
	</form>
  </body>
</html>
